@model List<BookFace.Core.Application.ViewModel.ViewModel.Amistad.AmistadViewModel>

@{
    ViewData["Title"] = "Mis Amigos";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <h1 class="mb-4">Mis Amigos</h1>

            @* Mensajes de TempData *@
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (Model == null || !Model.Any())
            {
                <div class="alert alert-info" role="alert">
                    Aún no tienes amigos en BookFace. ¡Empieza a conectar!
                </div>
                <a asp-controller="Amistad" asp-action="Buscar" class="btn btn-primary mt-3">Buscar Amigos</a>
            }
            else
            {
                <div class="list-group">
                    @foreach (var amistad in Model)
                    {
                        var friend = (amistad.Usuario1.Id == int.Parse(User.FindFirstValue(ClaimTypes.NameIdentifier))) ? amistad.Usuario2 : amistad.Usuario1;

                        <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                @if (!string.IsNullOrEmpty(friend.FotoPerfilUrl))
                                {
                                    <img src="@friend.FotoPerfilUrl" alt="Foto de perfil de @friend.NombreUsuario" class="rounded-circle me-3" style="width: 50px; height: 50px; object-fit: cover;">
                                }
                                else
                                {
                                    <img src="https://via.placeholder.com/50?text=No+Foto" alt="Sin foto de perfil" class="rounded-circle me-3" style="width: 50px; height: 50px; object-fit: cover;">
                                }
                                <div>
                                    <h5 class="mb-0">@friend.Nombre @friend.Apellido (@friend.NombreUsuario)</h5>
                                </div>
                            </div>
                            <div>
                                @* Botón para dejar de seguir/eliminar amistad *@
                                <form asp-controller="Amigos" asp-action="Unfriend" method="post" style="display:inline;"
                                      onsubmit="return confirm('¿Estás seguro de que quieres eliminar a @friend.NombreUsuario de tus amigos?');">
                                    <input type="hidden" name="amistadId" value="@amistad.Id" />
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-danger btn-sm">Dejar de Seguir</button>
                                </form>
                                @* Opcional: Enlace para ver el perfil del amigo *@
                                @* <a asp-controller="Perfil" asp-action="Ver" asp-route-id="@friend.Id" class="btn btn-outline-info btn-sm ms-2">Ver Perfil</a> *@
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

